generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id         String   @id @default(cuid())
  poste      String
  entreprise String?
  annees     String[]
  logo       String?
  url        String?
  favicon    String?
  details    Json
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Education {
  id            String   @id @default(cuid())
  diplome       String
  etablissement String
  startDate     DateTime? // Date début
  endDate       DateTime? // Date fin
  logo          String?
  url           String?
  details       String[]
  mention       String?   // Mention obtenue
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Certification {
  id          String   @id @default(cuid())
  nom         String
  organisme   String
  date        DateTime // Date précise au lieu de String
  logo        String?
  description String?
  url         String?  // Lien GASQ/CFTL pour ISTQB
  credentialId String? // ID certification
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id                     String   @id @default(cuid())
  name                   String   // Titre projet
  title                  String?  // Alias pour compatibilité
  description            String
  image                  String?  // Image principale
  image_path             String?  // Chemin image (existant JSON)
  technologies           String[] // Liste technologies
  languages              Json?    // Langages avec pourcentages (existant JSON)
  detected_technologies  Json?    // Technologies détectées (existant JSON)
  html_version           String?  // Version HTML (existant JSON)
  modernity_score        Json?    // Score modernité (existant JSON)
  context                String?  // Contexte projet (existant JSON)
  githubUrl              String?  // URL GitHub
  repo_url               String?  // Alias pour compatibilité
  liveUrl                String?  // URL live
  site_url               String?  // Alias pour compatibilité
  featured               Boolean  @default(false)
  challenge              String?  // Défi technique rencontré
  strategy               String?  // Stratégie de résolution
  tools                  String[] // Outils utilisés
  learnings              String[] // Apprentissages clés (positif)
  startDate              DateTime?
  endDate                DateTime?
  order                  Int      @default(0)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  level     Int      @default(0)
  icon      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SoftSkill {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Language {
  id        String   @id @default(cuid())
  name      String
  level     String
  flag      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hobby {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Creation {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String
  image       String?
  url         String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Translation {
  id        String   @id @default(cuid())
  key       String
  locale    String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, locale])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  read      Boolean  @default(false)
  replied   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  category  String?
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}